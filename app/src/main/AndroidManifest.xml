<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="edu.aku.hassannaqvi.dss_census_mother_monitor">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!-- Needed only if your app targets Android 5.0 (API level 21) or higher. -->
    <uses-feature android:name="android.hardware.location.gps"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.hardware.location.gps"/>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="edu.aku.hassannaqvi.dss_census_mother_monitor.core.MainApp"
        android:allowBackup="true"
        android:icon="@drawable/icon1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="edu.aku.hassannaqvi.dss_census_mother_monitor.activities.SplashscreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="edu.aku.hassannaqvi.dss_census_mother_monitor.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="stateVisible|adjustPan"/>
        <activity
            android:name="edu.aku.hassannaqvi.dss_census_mother_monitor.activities.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity
            android:name="edu.aku.hassannaqvi.dss_census_mother_monitor.activities.SectionFActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity
            android:name="edu.aku.hassannaqvi.dss_census_mother_monitor.activities.SectionIActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity
            android:name="edu.aku.hassannaqvi.dss_census_mother_monitor.activities.SectionJActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity
            android:name="edu.aku.hassannaqvi.dss_census_mother_monitor.activities.SectionGActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity
            android:name="edu.aku.hassannaqvi.dss_census_mother_monitor.activities.SectionHActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity
            android:name="edu.aku.hassannaqvi.dss_census_mother_monitor.activities.SectionMActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity
            android:name="edu.aku.hassannaqvi.dss_census_mother_monitor.core.AndroidDatabaseManager"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity
            android:name="edu.aku.hassannaqvi.dss_census_mother_monitor.activities.EndingActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity android:name="edu.aku.hassannaqvi.dss_census_mother_monitor.otherClasses.FormsList"/>
        <activity
            android:name="edu.aku.hassannaqvi.dss_census_mother_monitor.activities.MotherListActivity"
            android:label="Mothers List"
            android:screenOrientation="portrait"/>
    </application>

</manifest>